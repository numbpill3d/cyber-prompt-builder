# AI Assistant Configuration
# Copy this file to .env and fill in your values

# Application Settings
REACT_APP_APP_ENVIRONMENT=development
REACT_APP_APP_DEBUG=false

# AI Provider API Keys
REACT_APP_PROVIDERS_OPENAI_API_KEY=your_openai_api_key_here
REACT_APP_PROVIDERS_CLAUDE_API_KEY=your_claude_api_key_here
REACT_APP_PROVIDERS_GEMINI_API_KEY=your_gemini_api_key_here
REACT_APP_PROVIDERS_DEFAULT_PROVIDER=openai

# Agent Settings
REACT_APP_AGENT_MAX_ITERATIONS=3
REACT_APP_AGENT_ENABLE_TASK_BREAKDOWN=true
REACT_APP_AGENT_ENABLE_ITERATION=true
REACT_APP_AGENT_ENABLE_CONTEXT_MEMORY=true

# Memory Engine Settings
REACT_APP_MEMORY_DB_ENDPOINT=localhost:8000
REACT_APP_MEMORY_COLLECTION_NAME=ai_assistant_memory

# Logging Settings
REACT_APP_LOGGING_LEVEL=info
REACT_APP_LOGGING_ENABLE_LOCAL_STORAGE=true

# Prompt Builder Settings
REACT_APP_PROMPT_BUILDER_MAX_TOKENS=4096
REACT_APP_PROMPT_BUILDER_TEMPERATURE=0.7

# TTS Settings
REACT_APP_TTS_ENABLED=false
REACT_APP_TTS_VOICE=en-US-Standard-A